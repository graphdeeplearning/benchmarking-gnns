{
    "gpu": {
        "use": true,
        "id": 0
    },
    
    "model": "GraphSage",
    
    "out_dir": "out/CitationGraphs_node_classification/",
    
    "params": {
        "seed": 41,
        "epochs": 300,
        "batch_size": 20,
        "init_lr": 1e-2,
        "lr_reduce_factor": 0.5,
        "lr_schedule_patience": 25,
        "min_lr": 1e-6,
        "weight_decay": 5e-4,
        "print_epoch_interval": 5,
        "max_time": 48
    },
    
    "net_params": {
        "L": 1,
        "hidden_dim": 16,
        "out_dim": 16,
        "residual": false,
        "in_feat_dropout": 0.5,
        "dropout": 0.5,
        "graph_norm": false,
        "batch_norm": false,
        "sage_aggregator": "mean"
    }
}
